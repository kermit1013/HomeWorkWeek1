@model IEnumerable<HomeWorkWeek1.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Category", "客戶資料", FormMethod.Get, null))
{
    @Html.Label("分類：")


    @Html.DropDownList("cate", (SelectList)ViewBag.selectlist, "=Deafult=", new { @onchange = "this.form.submit();" })
}
@using (Html.BeginForm("Sortby", "客戶資料", FormMethod.Get, null))
{@Html.Label("Sort ColumnName：")
@Html.DropDownList("col", (SelectList)ViewBag.col, "=Deafult=")@Html.Label("Sort Type：")@Html.DropDownList("sort", (SelectList)ViewBag.sort)
<input type="submit" />
}

@using (Html.BeginForm("Search", "客戶資料", FormMethod.Get, null))
{
    @Html.TextBox("keyword", null, new { placeholder = "請輸入關鍵字" })
    <input type="submit" />
}




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.統一編號)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.傳真)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.地址)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@using (Html.BeginForm("Export", "客戶資料", FormMethod.Post))
{
    <input type="submit" value="Export" />
}
